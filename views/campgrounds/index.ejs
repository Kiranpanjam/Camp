<%- include("../partials/header") %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1 style="font-family: 'Nothing You Could Do';">Welcome to YelpCamp!</h1>
      <p style="font-family: 'Nothing You Could Do';">View our hand-picked campgrounds from all over the world.</p>
      <p>
        <a class="btn btn-info btn-lg" href="/campgrounds/new"
          >Add new campground</a
        >
      </p>
    </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap; color: aliceblue;">
    <div class="col-lg-12" style="margin-bottom: 20px; font-family: 'Nothing You Could Do';">
      <h3>Our most popular campgrounds</h3>
    </div>

    <% for(var i = 0; i < campgrounds.length; i++) { %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= campgrounds[i].image %> " alt="" />
        <div class="caption">
          <h4><%= campgrounds[i].name %></h4>
        </div>
        <p>
          <a
            href="/campgrounds/<%= campgrounds[i]._id %> "
            class="btn btn-info"
            >More Info</a
          >
        </p>
      </div>
    </div>
    <% }; %>
  </div>
</div>

<%- include("../partials/footer") %>
