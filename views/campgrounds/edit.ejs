<%- include("../partials/header") %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;color: azure; font-family: Nothing You Could Do;">Edit <%= campground.name %></h1>

    <div style="width: 35%; margin: 40px auto;">
      <form
        action="/campgrounds/<%= campground._id %>?_method=PUT"
        method="POST"
      >
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= campground.name %>"
            name="campground[name]"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="number"
            name="campground[price]"
            value="<%= campground.price %> "
            min="0.10"
            step="0.10"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= campground.image %>"
            name="campground[image]"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%= campground.description %>"
            name="campground[description]"
          />
        </div>
        <div id="login-button" class="form-group">
          <button class="btn btn-lg btn-default btn-primary btn-block">
            Submit
          </button>
        </div>
      </form>

      <div id="back">
        <a href="/campgrounds">Go Back!</a>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
